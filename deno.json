{
  "tasks": {
    "start": "deno task server:start & deno task vite:start",
    "serve": "deno task vite:build && deno task server:start",
    "build": "deno task vite:build",

    "server:start": "deno run -A --node-modules-dir --env-file --watch ./server/main.ts",
    "sandbox:start": "deno run -A --node-modules-dir --env-file --watch sandbox.ts",
    "vite:start": "deno run -A --node-modules-dir --env-file npm:vite",
    "vite:build": "deno run -A --node-modules-dir --env-file npm:vite build"
  },
  "imports": {
    "@deno/sandbox": "jsr:@deno/sandbox@^0.3.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.224.2",
    "@types/react": "npm:@types/react@^18.3.27",
    "prismjs": "npm:prismjs@1.29.0",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "react-router-dom": "npm:react-router-dom@^6.30.2",
    "vite": "npm:vite@^5.4.21",
    "vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.7.0"
  },
  "compilerOptions": {
    "types": ["react", "react-dom", "@types/react"],
    "lib": ["dom", "dom.iterable", "esnext", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
